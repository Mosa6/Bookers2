<%= render 'books/list' %>
<p id="notice"></p>
<div class="container px-5 px-sm-0">

  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>
      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
        <div class="field">
        <label for="book_title">Title</label><br>
           <%= f.text_field :title %>
        </div>

        <div class="field">
        <label for="book_body">Opinion</label><br>
           <%= f.text_area :body %>
        </div>
        <div class="actions">
          <%= f.submit ' Create Book ' %>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= image_tag book.user.get_profile_image(80,80) %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>

    </div>
  </div>
</div>
<%= render 'books/footer' %>
