
<%= render 'books/list' %>
<p id="notice"></p>
<div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td></td>
              <td></td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "destroy", book_path(@book), method: :delete %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
    </div>
<%= render 'books/footer' %>