
<%= render 'books/list' %>
<%= flash[:success] %>
<%= flash[:update] %>
<%= render 'users/userinfo', user: @user, book: @book  %>
<div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>

              <td>
                <%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= link_to user_path(@user.id) do %>
                  <%= @user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td><%= @book.body %></td>
              <td>
                <% if  @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book.id) %></td>
                <% end %>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "destroy", book_path(@book), method: :delete %>
                <% end %>
              </td>

            </tr>
          </tbody>
        </table>
    </div>
  </div>
<%= render 'books/footer' %>